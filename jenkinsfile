pipeline
{
    agent any
    stages
    {
        stage('Continuous Download')
        {
            steps
            {
                script
                {
                    try
                    {
                        git 'https://github.com/bharathv195/newmaven.git'
                    }
                    catch(Exception e1)
                    {
                        mail bcc: '', body: 'Step has been failed', cc: '', from: '', replyTo: '', subject: 'Step has failed', to: 'bharathvallepu195@gmail.com'
                        exit(1)
                    }
                }
            }
        }
        stage('Continuous Build')
        {
            steps
            {
            script
            {
                try
                {
                    sh 'mvn package'
                }
                catch(Exception e2)
                {
                    mail bcc: '', body: 'Step has been failed', cc: '', from: '', replyTo: '', subject: 'Step has failed', to: 'bharathvallepu195@gmail.com'
                    exit(1)
                }
            }
            }
        }
      }
     }
